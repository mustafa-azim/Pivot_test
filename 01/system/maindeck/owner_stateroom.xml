<?xml version="1.0" ?>
<system id="101a54c0-4986-11ea-8c0b-8cec4b009550" xmlns="http://www.plejd.com/schema/System" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.plejd.com/schema/System ../../../../idoru-xmlschema/System.xsd">
  <label value="MustafaYacht"/>
  <locations>
    <level id="maindeck">
      <label value="Main Deck"/>
      <priority value="200"/>
      <areas>
        <area id="owner_stateroom">
          <label value="Owner Stateroom"/>
          <icon value="image://area_images/owner_stateroom.jpg"/>
          <priority value=""/>
          <description>
            </description>
          <beacon>
            <major value=""/>
            <minor value=""/>
            <!--
                <proximity value="near"/>
                <login-accuracy value="3.0"/>
                <logout-accuracy value="1.0"/>
                -->
          </beacon>
          <zones>
            <zone id="main">
              <label value="Owner Stateroom"/>
              <icon value=""/>
              <description>
                    </description>
              <devices>
                <device value="tv-owner_stateroom"/>
                <device value="speakers-owner_stateroom"/>
                <device value="appletv-owner_stateroom"/>
                <device value="denonavreceiver-owner_stateroom"/>
              </devices>
            </zone>
            <zone id="bathroom">
              <label value="bathroom"/>
              <icon value=""/>
              <description>
                    </description>
              <devices>
                <device value="speakers-bathroom"/>
              </devices>
            </zone>
          </zones>
        </area>
      </areas>
    </level>
  </locations>
  <devices>
    
    <device id="denonavreceiver-owner_stateroom">
        <label value="Denon AV Receiver"/>
        <prototype value="denon:x4000:1"/>
        <interface id="main">
          <channel id="network">
            <provider value="network"/>
            <address value="10.128.240.93"/>
          </channel>  
        </interface>
        <connections>
          <connection port="hdmimonitor2" targetdevice="tv-owner_stateroom" targetport="hdmi1"/>
          <connection port="mainzone" targetdevice="speakers-owner_stateroom" targetport="in"/>
          <connection port="zone2" targetdevice="speakers-bathroom" targetport="in"/>
        </connections>
    </device>

    <device id="appletv-owner_stateroom">
        <label value="Apple TV"/>
        <prototype value="apple:appletv:simple"/>
        <interface id="main">
          <channel id="ir">
            <provider value="crestron"/>
            <address value="10.128.240.13"/>
            <connector value="6:1"/>
            <reuse value="true"/>
            <read_timeout value="50000"/>
          </channel>
        </interface>
        <connections>
            <connection port="out" targetdevice="denonavreceiver-owner_stateroom" targetport="sat/cbl"/>
        </connections>
    </device>

    <device id="tv-owner_stateroom">
      <label value="TV"/>
      <prototype value="samsung:generictv:audio"/>
      <interface id="main">
        <channel id="ir">
          <provider value="crestron"/>
          <address value="10.128.240.13"/>
          <connector value="6:2"/>
          <reuse value="true"/>
          <read_timeout value="50000"/>
        </channel>
      </interface>
    </device>
    <device id="speakers-owner_stateroom">
      <prototype value="speakers:surround:1"/>
      <label value="Speakers"/>
      <priority value="100"/>
    </device>
    <device id="speakers-bathroom">
      <prototype value="generic:speakers:1"/>
      <icon value="area_bathroom"/>
      <label value="Bathroom speaker"/>
      <priority value="200"/>
    </device>


  </devices>
</system>